@startuml
!theme plain
hide empty members

title LibTTAK Tutorial Curriculum

package "Foundation → Advanced Flow" {
    rectangle stage_orientation as "Orientation\nLessons 01–02\nSetup, helper workflow,\ncommit discipline" #lightyellow
    rectangle stage_core as "Stage 1 – Core Data + Logging\nLessons 03–08\nht/*, container/*, log/" #lightblue
    rectangle stage_concurrency as "Stage 2 – Concurrency\nLessons 09–11\nsync/*, atomic/*" #lightblue
    rectangle stage_async as "Stage 3 – Thread Pool + Async\nLessons 12–16\nthread/*, async/*, priority/*" #lightblue
    rectangle stage_timing as "Stage 4 – Timing/Limiters/Stats\nLessons 17–19\ntiming/*, limit/*, stats/*" #lightblue
    rectangle stage_memory as "Stage 5 – Memory Systems\nLessons 20–22\nmem/*, mem_tree/*" #lightblue
    rectangle stage_math as "Stage 6 – Math + Security\nLessons 23–28\nmath/*, security/sha256.c" #lightblue
    rectangle stage_trees as "Stage 7 – Trees + AST\nLessons 29–31\ntree/*" #lightblue
    rectangle stage_apps as "Stage 8 – Applications + Bench\nLessons 32–33\napps/aliquot-tracker, apps/bench" #lightblue
    rectangle stage_danger as "Stage 9 – Dangerous\nLessons 34–35\nunsafe/context.c,\ninclude/ttak/unsafe/*" #lightpink

    stage_orientation --> stage_core
    stage_core --> stage_concurrency
    stage_concurrency --> stage_async
    stage_async --> stage_timing
    stage_timing --> stage_memory
    stage_memory --> stage_math
    stage_math --> stage_trees
    stage_trees --> stage_apps
    stage_apps --> stage_danger
}

note right of stage_danger
    Unsafe lessons remain isolated but
    must be completed to guarantee
    whole-library coverage.
end note

package "Coverage Guarantees" {
    class CoverageChecklist {
        + Orientation: repo hygiene + helper
        + Core data: ht, container, log
        + Concurrency: sync, atomic
        + Async runtime: thread, async, priority
        + Runtime services: timing, limit, stats
        + Memory internals: mem, mem_tree, owner, epoch_gc
        + Math/Security: bigint stack, sha256
        + Trees: ast, bplus, btree
        + Apps/Bench: aliquot, bench harness
        + Unsafe: context bridge + macros
    }
}

CoverageChecklist .. stage_orientation : references
CoverageChecklist .. stage_danger : ensures

@enduml
